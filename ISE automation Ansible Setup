# 1) Install/upgrade the Cisco ISE collection
ansible-galaxy collection install cisco.ise --upgrade

# 2) Verify the module is visible
ansible-doc -t module cisco.ise.network_device_info

# 3) If ansible-doc can't see it, print your collection path(s)
ansible-config dump | grep -i collections_paths
# Optionally set it explicitly (adapt to your venv/path)
export ANSIBLE_COLLECTIONS_PATHS="$HOME/.ansible/collections:/usr/share/ansible/collections"

# ansible doc
https://galaxy.ansible.com/ui/repo/published/cisco/ise/docs/

